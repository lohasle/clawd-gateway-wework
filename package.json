{
  "name": "clawd-gateway-wework",
  "version": "0.2.0",
  "description": "企业微信通道插件 - 通过企微机器人驱动Clawdbot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules test/run.js",
    "test:coverage": "c8 npm test",
    "test:watch": "node --experimental-vm-modules test/run.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\"",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build",
    "version": "node -e \"console.log(require('./package.json').version)\"",
    "audit": "npm audit --audit-level=moderate",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "clawdbot",
    "workweixin",
    "wework",
    "enterprise-wechat",
    "wechat-work",
    "wecom",
    "plugin",
    "messaging",
    "chatbot",
    "gateway",
    "api",
    "webhook",
    "callback",
    "bot",
    "ai-assistant"
  ],
  "author": "lohasle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lohasle/clawd-gateway-wework.git"
  },
  "bugs": {
    "url": "https://github.com/lohasle/clawd-gateway-wework/issues"
  },
  "homepage": "https://github.com/lohasle/clawd-gateway-wework",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "README_CN.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./workweixin": {
      "import": "./dist/workweixin/index.js",
      "types": "./dist/workweixin/index.d.ts"
    }
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.57.0",
    "@types/node": "^25.3.0",
    "prettier": "^3.0.0",
    "c8": "^9.0.0"
  }
}
