# clawd-gateway-wework Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Enterprise WeChat Configuration
# ===========================================

# Corporate ID (from Enterprise WeChat Admin Console)
WORKWEIXIN_CORP_ID=your_corp_id_here

# Corporate Secret (from Application Management)
WORKWEIXIN_CORP_SECRET=your_corp_secret_here

# Agent ID (from Application Management)
WORKWEIXIN_AGENT_ID=your_agent_id_here

# Callback Token (configured in Enterprise WeChat)
WORKWEIXIN_TOKEN=your_callback_token_here

# Encoding AES Key (configured in Enterprise WeChat)
WORKWEIXIN_ENCODING_AES_KEY=your_encoding_aes_key_here

# ===========================================
# Optional Configuration
# ===========================================

# Direct Message Policy: "open" | "pairing" | "whitelist"
WORKWEIXIN_DM_POLICY=pairing

# Allowed users (comma-separated, used when dmPolicy is "whitelist")
WORKWEIXIN_ALLOW_FROM=user1,user2,user3

# ===========================================
# Logging Configuration
# ===========================================

# Log level: "debug" | "info" | "warn" | "error"
LOG_LEVEL=info

# Enable debug mode
DEBUG=workweixin:*

# ===========================================
# Rate Limiting Configuration
# ===========================================

# Requests per minute (default: 60)
WORKWEIXIN_RATE_LIMIT=60

# Circuit breaker threshold (default: 5)
WORKWEIXIN_CIRCUIT_BREAKER_THRESHOLD=5

# ===========================================
# Queue Configuration
# ===========================================

# Max retry attempts (default: 3)
WORKWEIXIN_MAX_RETRIES=3

# Retry delay in ms (default: 1000)
WORKWEIXIN_RETRY_DELAY=1000
